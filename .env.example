# Configuration Twitter (optionnel)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Configuration Twitter API (optionnel)
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Configuration ChromeDriver (optionnel)
CHROMEDRIVER_PATH=/path/to/chromedriver

# Configuration Email pour les notifications (optionnel)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=recipient1@example.com,recipient2@example.com

# Configuration des seuils d'alerte
PRICE_CHANGE_THRESHOLD=5  # Changement de prix en % pour déclencher une alerte
WHALE_ALERT_THRESHOLD=1000000  # Montant en USD pour les alertes de baleines

# Webhooks (optionnel)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_url
SLACK_WEBHOOK=https://hooks.slack.com/services/your_webhook_url

# Configuration Google Trends (optionnel)
GOOGLE_TRENDS_GEO=FR  # Code pays
GOOGLE_TRENDS_TIMEFRAME=now 7-d  # Période d'analyse

# Configuration Redis (optionnel - pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuration Telegram Bot (optionnel)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_ALERT_CHANNELS=channel_id1,channel_id2  # IDs des canaux pour les alertes
TELEGRAM_PRICE_ALERT_THRESHOLD=5  # Seuil en % pour les alertes de prix